{
  "manifest_version": 2,
  "name": "codesy.io",
  "description": "codesy is a pay-what-you-want market for the open source community to encourage coders to fix important bugs.",
  "version": "2.0",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "https://api.codesy.io/",
    "*://*.github.com/*",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
       "scripts": ["js/events.js"],
       "persistent": true
     },
  "web_accessible_resources": [
      "js/jquery-2.0.3.min.js",
      "js/jquery-2.0.3.min.map"
  ],
  "content_scripts" : [
    { "matches" : ["*://*.github.com/*"],
      "js" : [
        "js/jquery-2.0.3.min.js",
        "js/issue.js"
      ],
      "all_frames" : true
    },
    { "matches" : 
        ["*://*.codesy.io/"],
      "js" : [
        "js/jquery-2.0.3.min.js",
        "js/home.js"
      ],
      "all_frames" : true
    }    
  ] 
}